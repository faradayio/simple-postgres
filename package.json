{
  "name": "@fdy/simple-postgres",
  "version": "6.0.0-alpha.6",
  "description": "a minimal postgres interface for node",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "pg",
    "simple",
    "postgres",
    "postgresql",
    "database"
  ],
  "author": "Madeline Davies <npm@madd.tech>",
  "contributors": [
    "Eric Kidd <eric.kidd@faraday.io>"
  ],
  "license": "MIT",
  "files": [
    "dist/src/**/*.d.ts",
    "dist/src/**/*.js"
  ],
  "dependencies": {
    "find-root": "^1.1.0",
    "pg": "^8.3.2",
    "pg-connection-string": "^2.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/madd512/simple-postgres.git"
  },
  "scripts": {
    "build": "tsc",
    "fmt": "prettier --write .",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "prepublish": "rm -rf dist && npm run build",
    "test": "NODE_ENV=test ts-node test/test.ts",
    "cover": "npm run build && NODE_ENV=test c8 -x dist/test/ --check-coverage --lines=98 -r text -r html node dist/test/test.js"
  },
  "devDependencies": {
    "@types/blue-tape": "^0.1.33",
    "@types/find-root": "^1.1.2",
    "@types/node": "^14.6.0",
    "@types/pg": "^7.14.4",
    "@types/pg-connection-string": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "blue-tape": "^1.0.0",
    "c8": "^7.3.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "git-validate": "^2.1.4",
    "prettier": "^2.0.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "pre-commit": [
    "lint"
  ]
}
